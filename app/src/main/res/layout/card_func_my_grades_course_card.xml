<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128sp"
    android:layout_marginBottom="12sp"
    android:background="@drawable/shape_login_page_box"
    android:clickable="true"
    android:id="@+id/card.func.myGrades.layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12sp"
        android:textColor="#000"
        android:textSize="48sp"
        android:text="🍓"
        android:id="@+id/card.func.myGrades.icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="18sp"
        android:textSize="52sp"
        android:text="A"
        android:id="@+id/card.func.myGrades.courseGrade" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_toEndOf="@id/card.func.myGrades.icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数学分析（荣）上"
            android:textSize="24dp"
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/card.func.myGrades.courseName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课号：003005"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:id="@+id/card.func.myGrades.courseCode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学分：6"
            android:textSize="14dp"
            android:layout_marginTop="1dp"
            android:id="@+id/card.func.myGrades.courseCredits"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新：2021-01-12"
            android:textSize="14dp"
            android:layout_marginTop="1dp"
            android:id="@+id/card.func.myGrades.gradeUpdateDate"/>

    </LinearLayout>

</RelativeLayout>
